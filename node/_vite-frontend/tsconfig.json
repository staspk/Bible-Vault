/*
  noImplicitAny=True (ts compiler default)
     noImplicitAny=false caused significant bug, passing in string instead of a number into a model constructor, causing inability to construct consistent toString.
     noImplicitAny=True, caused slight annoyance, had to explicitly type `debounceTimerId` as an any

     Conclusion: Opinion "noImplicitAny should be False on Browser-side Invalidated.
*/
{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": [],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,    /* Stop compiler from forcing you to always init properties with null */

    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
  },
  "include": [
    "src", "index.ts", "kozubenko.ts", "../_shared", "../kozubenko"
  ]
}
